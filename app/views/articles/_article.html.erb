<% obj.each do |article| %>
  <div class="well col-xs-8 col-xs-offset-2">
    <h4 class="cntr"><strong><%= link_to article.title, article_path(article) %></strong></h4>
    <hr class="divider">
    <h4 class="left"><%= truncate(article.description, length: 500) %></h4>
  <div class="article-actions">
    <%=  link_to "edit", edit_article_path(article), :class => "btn btn-primary btn-xs" %>
    <%=  link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger btn-xs" %>
    <small class="pull-right">
    <span>Created by:</span> <%= link_to article.user.username, "#" %></br>
    <span>Posted:</span> <%= time_ago_in_words(article.created_at) %> ago</br>
    <span>Updated:</span> <%= time_ago_in_words(article.updated_at) %> ago
    </small>
  </div>
</div>
<% end %>