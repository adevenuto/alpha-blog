<h2 class="cntr"><%= @article.title %> </h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="cntr"><strong>Description:</strong></h4>
  <hr class="divider">
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <%= link_to "Edit", edit_article_path(@article), :class => "btn btn-info btn-xs" %>
    <%= link_to "Articles", articles_path, :class => "btn btn-success btn-xs" %>
    <%= link_to "Delete", article_path(@article), method: :destroy, data: {confirm: "Are you sure?"}, :class => "btn btn-danger btn-xs pull-right" %>
  </div>
</div>
