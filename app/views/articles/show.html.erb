<h2 class="cntr"><%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">

  <div class="blog-info">
    <p><span>Created by:</span> <%= link_to @article.user.username, "#" %></p></br>
    <p><span>Posted:</span> <%= time_ago_in_words(@article.created_at) %> ago</p></br>
    <p><span>Updated:</span> <%= time_ago_in_words(@article.updated_at) %> ago</p>

  </div>
  <h4 class="cntr"><strong>Description:</strong></h4>
  <hr class="divider">
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <%= link_to "Edit", edit_article_path(@article), :class => "btn btn-info btn-xs" %>
    <%= link_to "Articles", articles_path, :class => "btn btn-success btn-xs" %>
    <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger btn-xs pull-right" %>
  </div>
</div>
